<h1> Index Page </h1>
<% @comments.each do |comment| %>
  <p><%= comment.commenter %>
  <%= link_to 'Show', [comment.post, comment] %>
  <%= link_to 'Edit', edit_post_comment_path(comment.post, comment)%>
  <%= link_to 'Destroy', post_comment_path(comment.post, comment), :confirm => 'Are you sure?', :method => :delete %> </p>
<% end %>
<p><%= link_to "New Comment", new_post_comment_path %></p>